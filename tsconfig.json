{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist/esm", // Changed output directory
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "noEmit": false // Explicitly ensure output is enabled
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
